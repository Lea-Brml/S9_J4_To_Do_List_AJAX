<% require 'faker'%>

<div id="delete_partial">

<div class="card" style="width: auto; id="carte_mail">
  <div class="card-body">
    <div class="container row">
      <div class="col-9">
          <h4 class="card-title"><%= @email.object %></h4>
          <small>From : <%=@email.mail_adress%> </small><br>
          <small>Le : <%=@email.created_at%> </small>
      </div>
      <div class="col-3">
          <img src="http://www.asr-tarbes.fr/wp-content/uploads/2017/03/icone-mail-bleu-clair.png" class="card-img-top" alt="..." style="width:80%;"><br><br>
      </div>
    </div>
    <hr>
    <br>
    <p class="card-text"><%= @email.body %></p>
    <br>
    <div id="update">
      <%= link_to "Marquer comme non lu", email_path(),  method: :patch, class: "btn btn-outline-info", remote: true %>

      <%= link_to "supprimer", email_path(), data: {:confirm => "Es tu sur de vouloir suprrimer ?"}, :method => :delete, class:"btn btn-outline-danger", remote:true %>
    <!--<a href="#" class="btn btn-outline-danger">Supprimer</a>-->
    </div>
  </div>
</div>

</div>
